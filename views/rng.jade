    script.
      function getNumber() {
      var x = document.getElementById("randomNumber")
      x.style.cssText = 'transform: rotateY(90deg);';
      setTimeout(continueExecution, 300)
      }
      function continueExecution() {
      var x = document.getElementById("randomNumber")
      x.innerHTML = Math.floor((Math.random() * 20) + 1);
      x.style.cssText = 'transform: rotateY(0deg);';
      }
